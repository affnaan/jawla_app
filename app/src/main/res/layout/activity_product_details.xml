<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context=".ProductDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >


    <androidx.cardview.widget.CardView
        android:id="@+id/p1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"

        app:cardCornerRadius="18dp">


        <ImageView
            android:id="@+id/product_image_details"
            android:layout_width="349dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside">

        </ImageView>
        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="40dp"
            android:layout_height="52dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="end"

            android:layout_marginRight="100dp"
           />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/p1"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:textColor="#272670"
        android:id="@+id/zxz"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/p1"
        android:layout_marginStart="280dp"
        android:layout_marginTop="10dp"
        android:textColor="#272670"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1" />




    <TextView
        android:id="@+id/product_name_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zxz"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"

        android:background="@drawable/et_input_with_border_pay"
        android:gravity="center"
        android:padding="10dp"
        android:text="Trip Name"
        android:textColor="#2979FF"
        android:textSize="20sp"
       android:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/product_description_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/product_name_details"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/abc"
        android:gravity="center"
        android:padding="15dp"

        android:text="Trip Description"
        android:textColor="@color/Dark"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/product_price_details"
        android:layout_width="141dp"
        android:layout_height="59dp"
        android:layout_below="@+id/product_description_details"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/white_rect"
        android:gravity="center"
        android:padding="10dp"

        android:text="Trip Price"
        android:textColor="@color/Dark"
        android:textSize="20sp"
       android:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/zxzx"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_description_details"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:gravity=""
        android:layout_marginEnd="15dp"

        android:text="Maximum 10 members allowed"
        android:textColor="#272670"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1" />
    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/number_btn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zxzx"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:elevation="6dp"

        app:backGroundColor="#00B0FF"
        app:finalNumber="10"
        app:initialNumber="1"
        app:textColor="#FFFFFF"
        app:textSize="9sp">


    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

    <Button
        android:id="@+id/pd_add_to_cart_button"
        android:layout_width="220dp"
        android:drawableEnd="@drawable/arrow_right"
        android:drawableTint="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="25dp"
        android:padding="15dp"
        android:background="@drawable/round_blue_bg_8"
        android:gravity="center"
        android:text="Book Now"
        android:layout_marginBottom="20dp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/number_btn"

        android:textSize="25sp"
        android:fontFamily="sans-serif-smallcaps" />


