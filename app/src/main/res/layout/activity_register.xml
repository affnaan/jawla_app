<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/time2"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="70dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#2291FF"
        android:textSize="35sp"
        android:id="@+id/asaa"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/asaa"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#2291FF"
        android:textSize="14sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="504dp"
        android:layout_marginTop="145dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/register_username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_applogo"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/white_rect"
            android:hint="Enter Name"
            android:inputType="text"
            android:padding="20dp"
            android:textColor="#2979FF"
            android:textColorHint="#949494"
            android:textSize="18sp"
            android:fontFamily="sans-serif-smallcaps" />

        <EditText
            android:id="@+id/register_phone_number_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_username_input"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/white_rect"
            android:hint="Enter Phone Number"
            android:inputType="number"
            android:padding="20dp"
            android:textColor="#2979FF"
            android:textColorHint="#949494"
            android:textSize="18sp"
            android:fontFamily="sans-serif-smallcaps" />

        <EditText
            android:id="@+id/register_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_phone_number_input"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/white_rect"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="#2979FF"
            android:textColorHint="#949494"
            android:textSize="18sp"
            android:fontFamily="sans-serif-smallcaps" />
        <EditText
            android:id="@+id/register_password_input1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_password_input"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/white_rect"
            android:hint="Re-Enter Password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="#2979FF"
            android:textColorHint="#949494"
            android:textSize="18sp"
            android:fontFamily="sans-serif-smallcaps" />


        <Button
            android:id="@+id/register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@id/register_password_input"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_blue_bg_8"
            android:padding="20dp"
            android:text=" Create Account"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:fontFamily="sans-serif-smallcaps" />

    </LinearLayout>


</RelativeLayout>