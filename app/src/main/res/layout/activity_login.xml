    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mylinear"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="70dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#2291FF"
            android:textSize="35sp"
             />
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#2291FF"
            android:textSize="14sp"
             />



        <EditText
            android:id="@+id/login_phone_number_input"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_applogo"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:background="@drawable/white_rect"
            android:hint="Enter Phone number"
            android:inputType="number"
            android:padding="20dp"
            android:textColor="@color/yellow_green"
            android:textColorHint="#949494"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="18sp"
             />

        <EditText
            android:id="@+id/login_password_input"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_phone_number_input"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/white_rect"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="@color/yellow_green"
            android:textColorHint="#949494"
            android:textSize="18sp"
            android:fontFamily="sans-serif-smallcaps"
            />

        <LinearLayout
            android:id="@+id/liner_layout_1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <com.rey.material.widget.CheckBox
                android:id="@+id/remember_me_chkb"
                style="@style/Material.Drawable.CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:text="Remember me"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
              android:fontFamily="sans-serif-smallcaps"
                app:cbd_strokeColor="#F50057" />



        </LinearLayout>


        <Button
            android:id="@+id/login_btn"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/liner_layout_1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_blue_bg_8"
            android:padding="15dp"
            android:text=" Login"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/admin_panel_link"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:layout_below="@id/login_btn"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/white_rect"
            android:gravity="center"
            android:visibility="invisible"
            android:text="I'm Vender "
            android:textColor="@color/brown"
            android:textSize="20sp"
           android:fontFamily="sans-serif-smallcaps" />

        <TextView
            android:id="@+id/not_admin_panel_link"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_below="@id/login_btn"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="80dp"
            android:gravity="center_vertical"
            android:background="@drawable/white_rect"
            android:text="I'm not Vender "
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:fontFamily="sans-serif-smallcaps"
            android:visibility="invisible" />



        <TextView
            android:id="@+id/tvAlreadyAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="Donâ€™t have the Account?"
            android:textColor="#651FFF"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tvSignUp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:padding="2dp"
            android:text="SignUp"
            android:textColor="#651FFF"
            android:textSize="29sp" />



    </LinearLayout>
    <Button
        android:id="@+id/vender"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Admin Login"
        android:background="@drawable/white_rect"
        android:textColor="#2979FF"
        android:padding="10dp"
        android:visibility="invisible"
        android:layout_marginTop="25dp"
        android:layout_below="@id/mylinear"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="17sp" />

</RelativeLayout>